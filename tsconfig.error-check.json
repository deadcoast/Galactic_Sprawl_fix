{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "baseUrl": "."
  },
  "include": [
    "src/components/exploration/DataAnalysisSystem.tsx",
    "src/components/ui/performance/OptimizedFlowDiagram.tsx",
    "src/components/ui/performance/PerformanceRegressionReport.tsx",
    "src/components/ui/performance/VisualizationInspector.tsx"
  ],
  "exclude": ["node_modules", "**/node_modules/*", "node_modules/@types/css-font-loading-module"]
}
